<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>Shape 5 Live Search</name>
	<author>Shape5.com</author>
	<creationDate>06/12/2009</creationDate>
	<copyright>This Module is released under the GNU/GPL License</copyright>
	<authorEmail>contact@shape5.com</authorEmail>
	<authorUrl>www.shape5.com</authorUrl>
	<version>1.0</version>
	<description><![CDATA[<a href="http://joomlana.net" target="_blank"><img src="http://joomlana.net/Joomlana%20Enterprise.png" width="360" height="115" alt="Joomlana.net" /></a><br/>]]>Ajax search module for Joomla 1.5</description>
	<files>
		<filename module="mod_s5_live_search">mod_s5_live_search.php</filename>		
		<filename module="mod_s5_live_search">index.html</filename>	
		<filename module="mod_s5_live_search">css/s5_ls.css</filename>
		<filename module="mod_s5_live_search">tmpl/default.php</filename>
		<filename module="mod_s5_live_search">tmpl/index.html</filename>		
		<filename module="mod_s5_live_search">js/s5_ls_fade.js</filename>
		<filename module="mod_s5_live_search">js/index.html</filename>
		<filename module="mod_s5_live_search">images/loading.gif</filename>
		<filename module="mod_s5_live_search">images/s5_bar.png</filename>
		<filename module="mod_s5_live_search">images/s5_exit.png</filename>
		<filename module="mod_s5_live_search">images/s5_ls_arrow.png</filename>
		<filename module="mod_s5_live_search">images/s5_result1.png</filename>
		<filename module="mod_s5_live_search">images/s5_result2.png</filename>
	</files>	
	<params>		
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		
		<param name="spacer1" type="spacer" description="" default="Ajax Loader Icon Settings" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="spacer2" type="spacer" description="" default="You may generate your own loading icon from http://www.ajaxload.info/ Name the file loading.gif and over-write the exisiting image in modules\mod_s5_live_search\images with your own." />
		<param name="spacer22" type="spacer" description="" default="Because every template can display an inputbox differently you will need to use the left and top margin parameters to adjust the positioning of the icon. Use a negative left margin to overlap the ajax icon over top of your inputbox, ex: -20 This will cause the icon to move to the left and overlap the inputbox. For further clarification of this please visit our forum thread entitled Live Search Installation Tips under the Live Search forum board." />
		<param name="icon_ml" type="text" default="-19" label="Margin Left" description="" />
		<param name="icon_mt" type="text" default="18" label="Margin Top" description="" />
		<param name="icon_height" type="text" default="14" label="Height - Width is automatically calculated." description="" />
		
		<param name="spacer3" type="spacer" description="" default="Top and Bottom Bar Settings" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="bar_font_color" type="text" default="333333" label="Font Color" description="" />	
		<param name="bar_font_size" type="text" default="12" label="Font Size" description="" />	
		<param name="bar_bg_color" type="text" default="E4E4E3" label="Background Color" description="" />	
		<param name="bar_border_color" type="text" default="9F9E9E" label="Top Bar Bottom Border Color" description="" />	
		<param name="bar_padding_lr" type="text" default="10" label="Padding Left and Right" description="" />
		<param name="bar_padding_tb" type="text" default="6" label="Padding Top and Bottom" description="" />
		
		<param name="spacer4" type="spacer" description="" default="Results Settings" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="result_font_size" type="text" default="12" label="Font Size" description="" />	
		<param name="result_padding_lr" type="text" default="14" label="Padding Left and Right" description="" />
		<param name="result_padding_tb" type="text" default="6" label="Padding Top and Bottom" description="" />
		<param name="searchword_color" type="text" default="E2E1E1" label="Search Word Highlight Color" description="" />
		<param name="result1_font_color" type="text" default="333333" label="Result 1 Font Color" description="" />	
		<param name="result2_font_color" type="text" default="000000" label="Result 2 Font Color" description="" />	
		<param name="result1_link_font_color" type="text" default="506E88" label="Result 1 Article Link Font Color" description="" />	
		<param name="result2_link_font_color" type="text" default="333333" label="Result 2 Article Link Font Color" description="" />	
		<param name="result1_readmore_font_color" type="text" default="A13939" label="Result 1 Read More Link Font Color" description="" />	
		<param name="result2_readmore_font_color" type="text" default="A13939" label="Result 2 Read More Link Font Color" description="" />	
		<param name="result1_bg_color" type="text" default="FFFFFF" label="Result 1 Background Color" description="" />	
		<param name="result2_bg_color" type="text" default="F5F5F5" label="Result 2 Background Color" description="" />	
		<param name="result1_bg_hover_color" type="text" default="E6F8F8" label="Result 1 Background Hover Color" description="" />	
		<param name="result2_bg_hover_color" type="text" default="EAEAEA" label="Result 2 Background Hover Color" description="" />		
		<param name="result1_border_color" type="text" default="CCCCCC" label="Result 1 Bottom Border Color" description="" />	
		<param name="result2_border_color" type="text" default="BFBFBF" label="Result 2 Bottom Border Color" description="" />	
		
		<param name="spacer5" type="spacer" description="" default="Pop-Up Window Settings" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="width" type="text" default="20" label="Inputbox Width" description="Size of the search text box in characters" />
		<param name="popup_width" type="text" default="400" label="Width" description="Popup width" />	
		<param name="popup_mt" type="text" default="5" label="Margin Top" description="" />			
		<param name="popup_mb" type="text" default="10" label="Margin bottom" description="" />	
		<param name="popup_ml" type="text" default="0" label="Margin Left - Use a negative margin to move the popup to the left. Example: -10" description="" />
		<param name="popup_mr" type="text" default="0" label="Margin Right - Use a negative margin to move the popup to the right. Example: -10" description="" />	
		<param name="border_color" type="text" default="9F9E9E" label="Border Color" description="" />	
		<param name="border_size" type="text" default="1" label="Border Size" description="" />	
		
		<param name="spacer6" type="spacer" description="" default="Text Settings" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="text" type="text" default="Live Search..." label="Default Search Text" description="PARAMTEXT" />		
		<param name="button_text" type="text" default="" label="Button Text" description="PARAMBUTTONTEXT" />		
		<param name="more_results_text" type="text" size="60" default="Search Results - Click Here For Full Results" label="More Results Text" description="More results text" />
		<param name="no_results_text" type="text" size="60" default="No results found" label="No Results Text" description="No results text" />
		<param name="readmore_text" type="text" size="60" default="Read More..." label="Read More Text" description="" />
		
		<param name="spacer7" type="spacer" description="" default="Miscellaneous Settings" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="button" type="radio" default="Yes" label="Show Search Button?" description="Display a Search Button">
			<option value="No">No</option>
			<option value="Yes">Yes</option>
		</param>
		<param name="button_pos" type="list" default="right" label="Button Position" description="Position of the button relative to the search box">
			<option value="right">Right</option>
			<option value="left">Left</option>
			<option value="top">Top</option>
			<option value="bottom">Bottom</option>
		</param>
		<param name="searchphrase" type="list" default="any" label="Searchphrase">
			<option value="any">Any words</option>
			<option value="all">All words</option>
			<option value="exact">Exact phrase</option>
		</param>
		<param name="ordering" type="list" default="newest" label="Search order">
			<option value="alpha">Alphabetical</option>
			<option value="category">Section/Category</option>
			<option value="newest">Newest first</option>
			<option value="oldest">Oldest first</option>
			<option value="popular">Most popular</option>
		</param>
		<param name="limit" type="list" default="5" label="Limit Search To How Many Results?">
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
			<option value="6">6</option>
			<option value="7">7</option>
			<option value="8">8</option>
			<option value="9">9</option>
			<option value="10">10</option>
			<option value="11">11</option>
			<option value="12">12</option>
			<option value="13">13</option>
			<option value="14">14</option>
			<option value="15">15</option>
			<option value="20">20</option>
			<option value="25">25</option>
			<option value="30">30</option>
			<option value="50">50</option>
		</param>				
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
</install>